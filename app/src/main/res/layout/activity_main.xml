<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:background="#353535"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15" />

        <ImageButton
            android:id="@+id/helpButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:tint="#565555"
            app:srcCompat="@android:drawable/ic_menu_help" />

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:tint="#565555"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/exitGame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/holo_red_dark"
            android:tint="@android:color/black"
            app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="50">

        <ImageView
            android:id="@+id/player3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/flop1"
            android:layout_centerInParent="true"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/player"/>

        <ImageView
            android:id="@+id/player2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@id/flop3"
            android:layout_centerInParent="true"
            android:layout_marginRight="50dp"
            app:srcCompat="@drawable/player"/>

        <ImageView
            android:id="@+id/player4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/river"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/player"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:srcCompat="@drawable/logo" />

        <ImageView
            android:id="@+id/flop1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/flop2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/flop1"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/flop3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/flop2"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/turn"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/flop1"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/river"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@id/turn"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/chipStack"
            android:layout_width="@android:dimen/notification_large_icon_width"
            android:layout_height="@android:dimen/notification_large_icon_width"
            android:layout_below="@id/flop1"
            android:layout_centerInParent="true"
            android:adjustViewBounds="false"
            android:background="@android:drawable/screen_background_light_transparent"
            android:visibility="visible"
            app:srcCompat="@drawable/chip_stack" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/turn"
            android:layout_toRightOf="@id/chipStack"
            android:text="$1000"
            android:textSize="32dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark"
        android:gravity="end|bottom"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="@android:dimen/notification_large_icon_width"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/chip_stack" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/showCards"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Show Cards" />

                <Button
                    android:id="@+id/hideButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hide Cards" />

            </LinearLayout>

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/userFirstCard"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            app:srcCompat="@drawable/sample_card" />

        <ImageView
            android:id="@+id/userSecCard"
            android:layout_width="125dp"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"
            app:srcCompat="@drawable/sample_card" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:gravity="left"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@android:dimen/notification_large_icon_height"
                    android:layout_height="@android:dimen/notification_large_icon_height"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/player" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/betButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Raise / Bet" />

                <Button
                    android:id="@+id/foldButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fold / Sit out" />

                <Button
                    android:id="@+id/callButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Call / Check" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>